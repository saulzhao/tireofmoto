---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact" description="Send inquiry to ZENYARE Tyre (QINGDAO ZHENGYA RUBBER INDUSTRIAL CO., LTD)">
  <section class="hero">
    <h1>Contact</h1>
    <p>
      For inquiry of <strong>ZENYARE</strong> motorcycle tires and inner tubes, please send your details.
      A reply will be provided within 24 hours on working days.
    </p>
  </section>

  <section class="grid">
    <!-- Left: Contact cards -->
    <div class="card" style="grid-column: span 5">
      <h2 style="margin:0 0 10px">Direct contact</h2>

      <div class="contact-item">
        <div class="label">Email</div>
        <a class="value" href="mailto:zenyaretyre@gmail.com">zenyaretyre@gmail.com</a>
      </div>

      <div class="contact-item">
        <div class="label">WhatsApp</div>
        <a class="value" href="https://wa.me/8615966931211" target="_blank" rel="noopener">
          +86 159 6693 1211
        </a>
      </div>

      <hr />

      <h3 style="margin:0 0 8px">What to send</h3>
      <ul style="margin:0;padding-left:18px;color:var(--muted);line-height:1.8">
        <li>Sizes & pattern (TT/TL)</li>
        <li>Quantity per size</li>
        <li>Destination port / country</li>
        <li>Target market requirements (if any)</li>
      </ul>

      <div class="note">
        Tip: attach pattern photos or your target sample if available.
      </div>
    </div>

    <!-- Right: Inquiry form -->
    <div class="card" style="grid-column: span 7">
      <h2 style="margin:0 0 10px">Inquiry form</h2>
      <p class="meta" style="margin:0 0 14px">
        This form will open your email client and auto-fill the inquiry email to <strong>zenyaretyre@gmail.com</strong>.
      </p>

      <form id="inquiryForm">
        <div class="row">
          <label>
            <span class="field-label">Your name</span>
            <input name="name" placeholder="e.g., Mark Chen" required />
          </label>

          <label>
            <span class="field-label">Company</span>
            <input name="company" placeholder="e.g., ABC Trading Ltd." />
          </label>
        </div>

        <div class="row">
          <label>
            <span class="field-label">Email</span>
            <input name="email" type="email" placeholder="your@email.com" required />
          </label>

          <label>
            <span class="field-label">WhatsApp</span>
            <input name="whatsapp" placeholder="+1 234 567 890" />
          </label>
        </div>

        <label>
          <span class="field-label">Interested products</span>
          <input
            name="products"
            placeholder="e.g., Motorcycle tire 90/90-18 TT; Inner tube 3.00-18 TR4"
            required
          />
        </label>

        <div class="row">
          <label>
            <span class="field-label">Quantity</span>
            <input name="quantity" placeholder="e.g., 1000 pcs / size" />
          </label>

          <label>
            <span class="field-label">Destination port / country</span>
            <input name="destination" placeholder="e.g., Lagos / Nigeria" />
          </label>
        </div>

        <label>
          <span class="field-label">Message</span>
          <textarea
            name="message"
            rows="7"
            placeholder="Please include: sizes, TT/TL, pattern, packing request, target market requirements..."
            required
          ></textarea>
        </label>

        <div class="actions">
          <button type="submit" class="btn">
            Send inquiry by email
          </button>
          <a class="btn ghost" href="mailto:zenyaretyre@gmail.com?subject=Inquiry%20-%20ZENYARE">
            Email directly
          </a>
        </div>

        <p class="meta" style="margin:12px 0 0">
          If your email client does not open, please write to <strong>zenyaretyre@gmail.com</strong> and include your inquiry details.
        </p>
      </form>
    </div>
  </section>

  <style>
    /* page-level extras (works with your global style variables) */
    .contact-item{
      border:1px solid var(--line);
      border-radius:14px;
      padding:12px 12px;
      margin:10px 0;
      background:#0a1220;
    }
    .label{font-size:12px;color:var(--muted);margin-bottom:6px}
    .value{font-size:15px;font-weight:700}
    .note{
      margin-top:14px;
      font-size:13px;
      color:var(--muted);
      border:1px dashed var(--line);
      border-radius:14px;
      padding:10px 12px;
      background:#0a1220;
    }
    form{display:flex;flex-direction:column;gap:12px}
    .row{display:grid;grid-template-columns:1fr 1fr;gap:12px}
    @media (max-width:860px){.row{grid-template-columns:1fr}}
    .field-label{display:block;font-size:12px;color:var(--muted);margin:0 0 6px}
    input, textarea{
      width:100%;
      padding:10px 12px;
      border-radius:12px;
      border:1px solid var(--line);
      background:#0a1220;
      color:var(--text);
      outline:none;
    }
    input:focus, textarea:focus{border-color: rgba(34,197,94,.7)}
    .actions{display:flex;gap:10px;flex-wrap:wrap;margin-top:6px}
    .btn{
      display:inline-flex;align-items:center;justify-content:center;
      padding:10px 14px;border-radius:12px;
      border:1px solid var(--line);
      background:var(--brand);
      color:var(--bg);
      font-weight:800;
      cursor:pointer;
    }
    .btn:hover{filter:brightness(1.05)}
    .btn.ghost{
      background:transparent;
      color:var(--text);
    }
    .btn.ghost:hover{background:#0a1220;color:var(--brand)}
  </style>

  <script>
    const TO = "zenyaretyre@gmail.com";

    function encode(s) {
      return encodeURIComponent(String(s ?? "").trim());
    }

    document.getElementById("inquiryForm")?.addEventListener("submit", (e) => {
      e.preventDefault();
      const fd = new FormData(e.target);

      const name = fd.get("name");
      const company = fd.get("company");
      const email = fd.get("email");
      const whatsapp = fd.get("whatsapp");
      const products = fd.get("products");
      const quantity = fd.get("quantity");
      const destination = fd.get("destination");
      const message = fd.get("message");

      const subject = `Inquiry - ZENYARE - ${name || "Customer"}`;
      const body = [
        "Hello ZENYARE Team,",
        "",
        "Please quote and advise for the following inquiry:",
        "",
        `Name: ${name || ""}`,
        `Company: ${company || ""}`,
        `Email: ${email || ""}`,
        `WhatsApp: ${whatsapp || ""}`,
        "",
        `Interested products: ${products || ""}`,
        `Quantity: ${quantity || ""}`,
        `Destination: ${destination || ""}`,
        "",
        "Message:",
        `${message || ""}`,
        "",
        "Best regards,",
        `${name || ""}`,
      ].join("\n");

      const url = `mailto:${TO}?subject=${encode(subject)}&body=${encode(body)}`;
      window.location.href = url;
    });
  </script>
</BaseLayout>
